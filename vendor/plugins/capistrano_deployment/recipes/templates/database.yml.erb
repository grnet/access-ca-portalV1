login: &login
  encoding: utf8
  adapter: <%= db_adapter %> 
  username: <%= db_user %>
  password: <%= db_password %>
  host: <%= db_host %> 

development:
  database: <%= "#{application.tr('.', '_')}_development" %>
  <<: *login

test:
  database: <%= "#{application.tr('.', '_')}_test" %>
  <<: *login
   
production:
  database: <%= db_name || "#{application.tr('.', '_')}_production" %>
  <<: *login
